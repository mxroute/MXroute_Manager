                                        <label for="record_priority_mx" class="control-label">[% locale.maketext('Priority') %]</label>
                                    </div>
                                    <div class="record_subelement subelement_input">
                                        <input type="text"
                                            class="form-control"
                                            id="record_priority_mx"
                                            name="record_priority_mx"
