                                        <label for="record_exchanger" class="control-label">[% locale.maketext('Destination') %]</label>
                                    </div>
                                    <div class="record_subelement subelement_input">
                                        <input type="text"
                                            class="form-control"
                                            id="record_exchanger"
                                            name="record_exchanger"
